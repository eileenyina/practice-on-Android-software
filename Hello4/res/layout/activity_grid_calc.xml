<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="5"
    tools:context="com.example.hello.GridActivity" >

    <TextView
        android:id="@+id/calc_tv"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#8B7B8B"
        android:gravity="right"
        android:text="0"
        android:textSize="100dp" 
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="5"/>

    <Button
        android:id="@+id/calc_9"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="1"
        android:layout_column="0"
        android:text="9" />

    <Button
        android:id="@+id/calc_8"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="1"
        android:layout_column="1"
        android:text="8" />

    <Button
        android:id="@+id/calc_7"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="1"
        android:layout_column="2"
        android:text="7" />

    <Button
        android:id="@+id/calc_div"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="1"
        android:layout_column="3"
        android:text="/" />

    <Button
        android:id="@+id/calc_c"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="1"
        android:layout_column="4"
        android:text="C"
        android:textColor="#ff0000" />

    <Button
        android:id="@+id/calc_6"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="2"
        android:layout_column="0"
        android:text="6" />

    <Button
        android:id="@+id/calc_5"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="2"
        android:layout_column="1"
        android:text="5" />

    <Button
        android:id="@+id/calc_4"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="2"
        android:layout_column="2"
        android:text="4" />

    <Button
        android:id="@+id/calc_mul"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="2"
        android:layout_column="3"
        android:text="*" />

    <Button
        android:id="@+id/calc_back"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="2"
        android:layout_column="4"
        android:text="Back" />

    <Button
        android:id="@+id/calc_3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="3"
        android:layout_column="0"
        android:text="3" />

    <Button
        android:id="@+id/calc_2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="3"
        android:layout_column="1"
        android:text="2" />

    <Button
        android:id="@+id/calc_1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="3"
        android:layout_column="2"
        android:text="1" />

    <Button
        android:id="@+id/calc_jian"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="3"
        android:layout_column="3"
        android:text="-" />

    <Button
        android:id="@+id/calc_0"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="0" />

    <Button
        android:id="@+id/calc_dian"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="4"
        android:layout_column="2"
        android:text="." />

    <Button
        android:id="@+id/calc_add"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_row="4"
        android:layout_column="3"
        android:text="+" />

    <Button
        android:id="@+id/calc_dengyu"
        android:layout_width="65dp"
        android:layout_height="130dp"
        android:layout_row="3"
        android:layout_column="4"
        android:layout_rowSpan="2"
        android:background="#8B7B8B"
        android:text="=" />

</GridLayout>